{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "lib": ["ESNext"],
      "esModuleInterop": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  